@import "_normalize.css"
@import "_highlightjs.css"
@import nib
@import "_variables"
@import "_jeet"

// global-reset()


$jeet = {
  gutter: 3,
  max-width: 1080px,
  layout-direction: LTR,
  parent-first: false
}


breakpoint = 800px
color-background = #fff
color-font = #4a4a4a
main-color = #2196F3
second-color = #FF5722
sub-color = #fff
grey-color = #9e9e9e
grey-base = #eee

a
  text-decoration: none
  color: main-color

a:visited
  color: main-color

a:hover
  color: second-color

.content-main
article p
  color: color-font

#site-header
#site-footer
.content-main
.entry-header
.entry-main
.entry-title
.entry-footer
  center()

html
  padding 0
  margin 0
  height 100%

body
  font-size 18px
  padding 0
  position: relative
  padding-bottom: 9rem
  margin 0
  min-height 100%
  box-sizing: border-box

  background-color color-background


#site-footer
  position absolute
  bottom 0
  right 0
  left 0
  padding 1rem
  color: color-font
  font-size: 80%
  line-height: 1.5

#site-header h1
  margin-top: 0

.entry-header-wrap
  uncenter()
  padding-top 2em
  padding-bottom 3em
  background-color: main-color
  color: sub-color

.entry-header h1
  margin: 0
  margin-bottom: 0.5em

.list-entry
  margin: 1.5em 0


.list-entry-title
  padding-left: .5em
  font-size: 200%
  max-width: 10em
  white-space nowrap
  display: inline-block;

#paginator
  text-align: center;
  font-size: 120%
  margin-top: 2em

#paginator a
  color color-font

#paginator .space
  padding: 0 1em

#paginator .page-number
#paginator .extend
  padding: 0 0.5em
  border-bottom: 2px solid color-font

#paginator .current
  color: main-color
  border-color: main-color
  background-color: alpha(main-color,0.2)

#paginator a:hover
  color: second-color
  border-color: second-color
  background-color: alpha(second-color,0.2)

.entry-desc
  font-size: 80%

.entry-toc
  column(1/5)
  move(4/5)
  min-height 1em
  @media screen and (max-width: breakpoint)
    unmove()
    stack()
  font-size: 80%

.entry-toc ol
  padding-left: 0

.entry-toc li
  list-style-type: none
  padding: 0.5em 0 0.5em 1em


.entry-content
  column(4/5)
  move(-1/5)
  @media screen and (max-width: breakpoint)
    unmove()
    stack()
  line-height: 1.75
  padding-top: 1em
  text-justify auto

img
  max-width 100%
  max-height 100%
  display: block
  margin 0 auto


.highlight .gutter .line
  border-right: solid 1px grey-color
  padding: 0 1ex
  margin-right: 1ex
  text-align: center;
  color grey-color
