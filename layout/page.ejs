<article class="entry">

  <div class="entry-header-wrap">
    <header class="entry-header">
        <% if(page.title) { %>
          <h1 class="entry-title"><%- page.title || 无标题 %></h1>
        <% } %>
        <div>
          <span class="entry-desc">创建于 <%- date(page.date, 'L') %>
            <% if(page.updated){%>，修订于 <%- date(page.updated, 'L')%>。</span><%}%>
        </div>
    </header>
  </div>
  <div class="entry-main">
    <div class="entry-toc">
      <%- toc(page.content, {list_number:false}) %>
    </div>
    <div class="entry-content">
      <%- page.content %>
    </div>
  </div>
  <footer class="entry-footer"></footer>
</article>
